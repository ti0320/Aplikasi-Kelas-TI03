<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ti3.dedlen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_asli"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.TI032020">
        <activity
            android:name=".splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.admin.checker"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.admin.AdminFragment"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.admin.tugasFragment"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.home.infomore"
            android:label="@string/app_name">
        </activity>
        <service android:name=".FirebaseMessageReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>