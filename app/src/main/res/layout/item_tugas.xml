<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:gravity="center_vertical"
    app:cardBackgroundColor="@color/item_jadwal"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/main"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tugas_jam"
                    android:layout_weight = "1"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05 APR" />

                <ImageView
                    android:tintMode="@color/white"
                    android:gravity="right"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tugas_matkul"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menggambar Lanjut" />

            <TextView
                android:id="@+id/tugas_judul"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week 5 : menggambar realis" />


            <Button
                android:id="@+id/btn_info"
                android:layout_width="100dp"
                android:fontFamily="@font/poppins"
                android:layout_height="50dp"
                android:backgroundTint="@color/btn"
                android:text="INFO >>"
                android:layout_marginTop="15dp"
                android:onClick="btn_info"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>